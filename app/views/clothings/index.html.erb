<p id="notice"><%= notice %></p>

<h1>Clothings</h1>

<form method="input" action="/clothings">
    Buscar <input type="text" name="filter" /> 
      <input type="submit" />
      </form><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr>
        <td><%= clothing.name %></td>
        <td><%= clothing.color %></td>
        <td><%= clothing.description %></td>
        <td><%= clothing.brand.name %></td>
        <td><%= clothing.type.name %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @clothings %>

<br>

<%= link_to 'New Clothing', new_clothing_path %>
